<h1>Update the request</h1>

{{#if errorMessagesForDatabase}}
    {{#each errorMessagesForDatabase}}
        <i> {{this}} </i>
    {{/each}}
{{else}}

    {{#if errorMessages}}

        <ul>
            {{#each errorMessages}}

                <div class="toast toast-error">
                    <p>{{this}}</p>
                </div>
                
            {{/each}}
        </ul>

    {{/if}}

    <form action="" method="post">

        <input type="text" placeholder="Movie title" name="titleRequest" value="{{request.titleRequest}}"><br>
        <input class="btn btn-submit" type="submit" value="Update!">

    </form>

{{/if}}